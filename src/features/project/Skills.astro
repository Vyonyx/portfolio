---
import { icons } from "../../data";

interface Props {
  skills: string[];
}

const { skills } = Astro.props;
---

<ul class="flex flex-row gap-x-4 justify-center items-center">
  {
    skills?.map((skill) => {
      const { path, link } = icons[skill as keyof typeof icons];
      return (
        <li>
          <a href={link} target="_blank">
            <img
              src={path}
              alt={`Official ${skill} documentation`}
              class="w-14 aspect-square fill-red-500"
            />
          </a>
        </li>
      );
    })
  }
</ul>
