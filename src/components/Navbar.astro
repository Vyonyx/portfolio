---
import Hamburger from "./Hamburger.astro";

interface Props {
  color?: string;
}

const { color = "bg-black" } = Astro.props;
---

<nav
  id="navbar"
  class={`fixed top-0 left-0 w-screen flex justify-between items-center h-10 md:h-14 ${color} bg-opacity-70 text-white px-6 md:px-20 z-20 font-bodoni`}
>
  <a class="hover:text-highlight" href="/">
    <h1 class="text-xs md:text-2xl">SK Portfolio</h1>
  </a>
  <Hamburger id="hamburgerIcon" />
</nav>
