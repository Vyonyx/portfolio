---

<section class="min-h-screen h-fit relative bg-neutral-900 grid grid-cols-1 lg:grid-cols-3 grid-rows-auto justify-items-center place-items-center gap-20 p-20 snap-start">
  {projects.map(({name, thumbnail, description}) => {
    return (
      <div data-card class="w-full h-fit flex flex-col justify-between gap-5 bg-neutral-900 text-white p-10 bg-gradient-to-t from-neutral-800 to-neutral-900">
        <h1 class="text-2xl">{name}</h1>
        <p class="text-sm mb-10">{description}</p>
        <img
          class=""
          src={thumbnail}
          alt={`${name} project by Shaneel Kumar`}
        >
      </div>
    )
  })}
</section>

<script>
  import gsap from 'gsap'
  import { ScrollTrigger } from 'gsap/ScrollTrigger'
  gsap.registerPlugin(ScrollTrigger)
  const cards = document.querySelectorAll('[data-card]')

  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: cards,
      start: 'top center',
      end: 'top 30%',
      scrub: 4
    },
  })

  tl.from(cards, {
    opacity: 0,
    duration: 1,
    y: 100,
    ease: 'sin.easeInOut'
  })
</script>