---
export interface Link {
  name: string;
  url: string;
}

const links: Link[] = [
  {
    name: 'Home',
    url: '/'
  },
  {
    name: 'About Me',
    url: '/about'
  },
]
---

<nav class="flex justify-between items-center h-20 bg-slate-200 px-20">
  <a class="hover:text-slate-500" href="/">
    <h1 class="text-2xl">SK Portfolio</h1>
  </a>
  <ul class="flex gap-8">
    {links.map(({name, url}) => {
      return (
      <li>
        <a
          class="hover:text-slate-500"
          href={url}
        >
          {name}
        </a>
      </li>
      )
    })}
  </ul>
</nav>