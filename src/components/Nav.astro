---
export interface Link {
  name: string;
  url: string;
}

const links: Link[] = [
  // {
  //   name: 'Home',
  //   url: '/'
  // },
  {
    name: 'About Me',
    url: '/about'
  },
]
---

<nav class="fixed top-0 left-0 w-screen flex justify-between items-center h-10 md:h-14 bg-neutral-900 text-white px-6 md:px-20 z-20">
  <a class="hover:text-slate-500" href="/">
    <h1 class="text-xs md:text-2xl">SK Portfolio</h1>
  </a>
  <ul class="flex gap-4 md:gap-8 text-xs md:text-lg">
    {links.map(({name, url}) => {
      return (
      <li>
        <a
          class="hover:text-slate-500"
          href={url}
        >
          {name}
        </a>
      </li>
      )
    })}
  </ul>
</nav>