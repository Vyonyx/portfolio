---
export interface Props {
  name: string;
  description: string;
  thumbnail: string;
}

const { name, description, thumbnail } = Astro.props
---

<div data-card class="w-full h-fit flex flex-col justify-between gap-5 bg-neutral-900 text-white p-5 lg:p-10 bg-gradient-to-t from-neutral-800 to-neutral-900">
  <h1 class="text-2xl">{name}</h1>
  <p class="text-sm lg:mb-10">{description}</p>
  <img
    class=""
    src={thumbnail}
    alt={`${name} project by Shaneel Kumar`}
  >
</div>