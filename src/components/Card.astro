---
const { project, section } = Astro.props
const { name, description, thumbnail, githubLink, liveLink } = project

const iconSize = '24'
---

<div data-card={section} class="w-full h-full max-h-[550px] flex flex-col justify-between gap-5 bg-neutral-900 text-white p-5 lg:p-10 bg-gradient-to-t from-neutral-800 to-neutral-900">
  <h1 class="font-roboto text-2xl">{name}</h1>
  <p class="font-roboto text-sm lg:mb-10">{description}</p>
  <img
    class=""
    src={thumbnail}
    alt={`${name} project by Shaneel Kumar`}
  >

  <span class="flex justify-center gap-10 justify-self-end">
    {githubLink && (
      <a
        class="flex items-center gap-2"
        href={githubLink}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width={iconSize}
          height={iconSize}
          viewBox="0 0 24 24"
          style="fill:white;"
        >
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
          Github
      </a>
    )}

    {liveLink && (
      <a
        class="flex items-center gap-2"
        href={liveLink}
      >
        <svg
          width={iconSize}
          height={iconSize}
          clip-rule="evenodd"
          fill-rule="evenodd"
          stroke-linejoin="round"
          stroke-miterlimit="2"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          style="fill: white;"
        >
            <path d="m21 9.005h-18v10.995c0 .621.52 1 1 1h16c.478 0 1-.379 1-1zm-18-1h18v-4.005c0-.478-.379-1-1-1h-16c-.62 0-1 .519-1 1zm15.25-3.25c.414 0 .75.336.75.75s-.336.75-.75.75-.75-.336-.75-.75.336-.75.75-.75zm-3 0c.414 0 .75.336.75.75s-.336.75-.75.75-.75-.336-.75-.75.336-.75.75-.75z" fill-rule="nonzero"/>
          </svg>
        Live
      </a>
    )}
  </span>

</div>