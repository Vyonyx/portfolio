---
import AboutMeCard from "./AboutMeCard.astro";
const section = "about";
---

<section
  class="h-fit relative bg-neutral-900 grid xs:grid-cols-1 lg:grid-cols-4 grid-rows-auto justify-items-center place-items-center p-10 pt-40 gap-6 lg:p-20 lg:pt-40"
>
  <h1
    id={`${section}`}
    class="font-bodoni text-4xl lg:text-6xl text-white xs:relative lg:absolute lg:top-20"
  >
    About Me
  </h1>

  <div
    class="rounded-xl w-full bg-white aspect-square overflow-hidden max-w-sm 2xl:max-w-md"
  >
    <img src="/profile-photo.jpg" alt="Shaneel Kumar portrait" />
  </div>
  <AboutMeCard section={section} />;
</section>

